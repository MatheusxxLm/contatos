@model IEnumerable<Contatos.Models.Contato>

<html>
<head>
    <link  rel="stylesheet" href="~/css/index.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">

</head>

<body>

    <div class="container">
            <header class="contato">
                Lista de Contatos
            </header>
<hr />

            <p>
                <a class="Novo" asp-action="Criar">Novo Contato</a>
            </p>
         <div class="logo">
             <img class="logo" src="~/img/contact-1293388_960_720.png" />
         </div>


<table class="table" id="table">
    <thead>
        <tr>
            <th class="nome">
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th class="telefone">
                @Html.DisplayNameFor(model => model.Telefone)
            </th>

            <th class="email">
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th class="ativo">
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
                <tr>                    
                     <td>
                         @Html.DisplayFor(model => item.Nome)
                     </td>

                     <td>
                         @Html.DisplayFor(model => item.Telefone)
                     </td>

                     <td>
                         @Html.DisplayFor(model => item.Email)
                     </td>

                     <td>
                         @Html.DisplayFor(model => item.Ativo)
                     </td>

                     <td>
                         <a class="botao" asp-action="Editar" asp-route-id="@item.Id">Editar</a>|
                         <a class="botao" asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>|
                         <a class="botao" asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>|
                     </td>

                </tr>
        }
    </tbody>

</table>




    
    </div>
 </body>
</html>
